<%= form_with(model: post, local: true) do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "つのエラーです。空文字はやめてください") %> </h2>

      <ul>
        <% post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class ="card col-12">
      <div class="field text-center">
        <%= form.label :content, class: "from-control col-10"%>
        <%= form.text_field :content , class: "from-control col-8"%>
      </div>
      <div class = "field col-12 text-center">
        <%= form.label :image ,class:"col-12"%>
        <%= form.file_field :image, class: "form-control-file col-12 "%> 
      </div>

    <div class = "field  d-flex justify-content-center  flex-wrap mt-3">  
        <%= form.submit "投稿", class: "btn btn-primary col-7 "%>
    </div>
      <div class = "form-group">
        <% if @post.image.attached? && @post.image.blob&.persisted?%>
          <div class = "heckbox">
            <label>
              <%= form.check_box :remove_image%>
              画像を削除する
            </label>
          </div>
        <%end%>
      </div>
<% end %>

    <h1>投稿詳細ページ</h1>
<div class = "field  d-flex justify-content-center col-12 flex-wrap mt-5">
  <div class ="card col-6">  

    <h3><%= @post.user.email %></h3>
    <h3><%= @post.content %></h3>

    <h2 class ="card-text">コメント一覧</h2>
    <% @comments.each do |c| %>
      <div>
        <a href="/users/<%= @post.user.id %>"><%= c.user.email %></a>
        <%= c.content %>
        <hr>
      </div>
    <% end %>

    <%= form_for [@post, @comment] do |f| %>
      <%= f.text_field :content %>
        <%= f.hidden_field :post_id, value: @post.id %>
      <br>
      <%= f.submit 'コメントする' %>
    <% end %>

    <%= link_to "ホームへ戻る", posts_path %>
  </div>
</div>

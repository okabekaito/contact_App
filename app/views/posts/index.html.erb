<h1>投稿一覧</h1>
<div class ="d-flex justify-content-center col-12 flex-wrap">
    <% @posts.each do |post| %>
        <div class  = "bg-light  border border-dark rounded-pill col-6 d-flex flex-nowrap mb-3">
            <p class = "mt-3"><a href="/posts/<%= post.id %>"><%= post.content %></a></p>
        </div>
            <p class=" mt-3 text-right"><%= link_to '編集', edit_post_path(post) %></p>
            <h5>作成者</h5><a class = "" href="/users/<%= post.user.id %>">(<%= post.user.nickname %>)</a>
    <% end %>
</div>
<div class = "d-flex justify-content-center flex-wrap col-12 mb-5 mt-5">
    <%= paginate @posts%>
</div>

<h1>投稿一覧</h1>
<div class ="d-flex justify-content-center col-12 flex-wrap">
    <% @posts.each do |post| %>
        <div class  = "bg-light  border border-dark rounded-pill col-6 d-flex flex-nowrap mb-3">
            <p class = "mt-3"><a href="/posts/<%= post.id %>"><%= post.content %></a> 
            <%if post.liked_users.count != 0%> 👍<%= post.liked_users.count %></p>
            <%end%>
        </div>
            <h5>作成者</h5><a href="/users/<%= post.user.id %>">(
                    <%if !post.user.nickname.presence%>
                        匿名)
                    <%else%>
                        <%= post.user.nickname %>)</a>
                    <% end %>
    <%end%>
    
</div>
<div class = "d-flex justify-content-center flex-wrap col-12 mb-5 mt-2">
    <%= paginate @posts%>
</div>
